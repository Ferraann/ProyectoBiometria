<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/blanco"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerSensores"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/boton_principal"
            android:backgroundTint="#F0F0F0"
            android:minWidth="150dp" />

        <TextView
            android:id="@+id/tvNodoActivoDesde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nodo activo desde:   10/11/2015"
            android:background="@drawable/boton_principal"
            android:backgroundTint="@color/azul_Paneles"
            android:textColor="@color/azulOscuro_Principal"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#B5C0E5"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="Estado del nodo:"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvEstadoNodo"
                        android:text="Desconocido"
                        android:textColor="@color/azulOscuro_Principal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#B5C0E5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_battery"
                        app:tint="@color/azulOscuro_Principal"/>

                    <TextView
                        android:id="@+id/tvBateriaNodo"
                        android:text="86%"
                        android:textColor="@color/blanco"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#B5C0E5"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="El nodo se encuentra a:"
                    android:textColor="@color/blanco"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvDistanciaNodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- m"
                    android:textColor="@color/blanco"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#B5C0E5"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incidencias del nodo:"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:layout_margin="15dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Has perdido o no encuentras tu nodo?\nActualiza la distancia para poder encontrarlo."
            android:gravity="center"
            android:textColor="#000"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btnActualizarDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR DISTANCIA"
            android:backgroundTint="@color/azulOscuro_Principal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Tienes alguna duda o algo funciona mal?\nDesde Soporte Técnico nos ponemos a tu disposición."
            android:gravity="center"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btnSoporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOPORTE TÉCNICO"
            android:backgroundTint="@color/azulOscuro_Principal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>
