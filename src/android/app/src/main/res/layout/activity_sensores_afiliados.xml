<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/listaDeSensores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/infoSensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        />

    <TextView
        android:id="@+id/infoSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información del sensor"
        app:layout_constraintBottom_toTopOf="@+id/dondeEstaSensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listaDeSensores"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/dondeEstaSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distancia aún no calculada"
        app:layout_constraintBottom_toTopOf="@+id/buscarSensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoSensor"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/buscarSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar sensor"
        android:onClick="buscarSensor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dondeEstaSensor"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
