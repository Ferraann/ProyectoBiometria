<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/editarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="botonEditarPerfil"
        android:text="Editar perfil" />

    <Button
        android:id="@+id/btnVincularQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vincular por qr" />

    <Button
        android:id="@+id/notificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="botonIrNotificaciones"
        android:text="Notificaciones" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="botonVerSensoresAfiliados"
        android:text="Ver sensores afiliados" />
</LinearLayout>